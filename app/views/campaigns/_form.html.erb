<%= form_for @campaign, :html => { :class => "form-horizontal campaign" } do |f| %>

  <% if @campaign.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>
      </div>

      <div class="panel-body">
        <ul>
        <% @campaign.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :price, :class => 'form-control' %>
    </div>
    <%= error_span(@influencer[:price]) %>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%= error_span(@influencer[:description]) %>
  </div>
  <div class="control-group">
    <%= f.label :industry, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :industry, :class => 'form-control' %>
    </div>
    <%= error_span(@influencer[:industry]) %>
  </div>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    campaigns_path, :class => 'btn btn-default' %>

<% end %>
